from building import *

cwd = GetCurrentDir()

path = [cwd + '/app/include']
path += [cwd + '/test']
path += [cwd + '/at/']

src = Glob('app/test/*.c')
src += Glob('app/src/*.c')
src += Glob('at/*.c')

lib = ['libwin_wiota_dev']
libpath = [cwd + '/lib']

group = DefineGroup('PS', src, depend = [''], CPPPATH = path, LIBS = lib, LIBPATH = libpath)

Return('group')
